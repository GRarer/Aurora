{
  "compilerOptions": {
    "removeComments": true,
    "target": "ES2016",
    "outDir": "./out/",
    "rootDir": "./src/",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*.ts"
  ]
}
